@model Talent.Domain.Genre

@{
    ViewBag.Title = "Edit Genre";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary()

        <input id="GenreId" name="GenreId" hidden="hidden" value="@Model.GenreId" />

        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(o => o.Name)
        </div>

        <div class="form-group">
            <label>Code</label>
            @Html.TextBoxFor(x => x.Code, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Code)
        </div>

        <div class="form-group">
            <label>
                Inactive
                @Html.CheckBoxFor(m => m.IsInactive, new { @class = "checkbox" })
            </label>
        </div>

        <div class="form-group">
            <label>Display Order</label>
            @Html.TextBoxFor(x => x.DisplayOrder, new { @class = "form-control" })
        </div>

        <div>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        <div class="form-group">
            @Html.ActionLink("Back to List", "Index", new { @class = "text-primary" })
        </div>
    }

</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
